<br>
<hr class="style1">
<h1 class="text-center"><%= @place.name %></h1>
<hr class="style1">
<br>
<div id="show-container" class="container">
  <div class="row">  
    <div class="booyah-box col-sm-10 col-lg-5 offset-sm-1">
      <i><%= @place.address %></i>
      <hr>
      <p><%= @place.description %></p>
      <hr>
      <p><%= @place.user.email %></p>
      <br>
      <% if @place.latitude.present? && @place.longitude.present? %>
        <script>

          function initMap() {
            var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 12,
              center: myLatLng
            });

            var marker = new google.maps.Marker({
              position: myLatLng,
              map: map,
              title: 'Hello World!'
            });
          }
        </script>
      <% end %>
        <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAe-cbeggfx9doD9g3mk-NcHT3Z7z88BFg&callback=initMap">
        </script>
      <div id="map"></div>
      <br>
      <div>
        <% if current_user && current_user == @place.user %>
          <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
          <!-- Button trigger image modal -->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">
            Add an Image
          </button>
          <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
        <% end %>
        <br><br>
      </div>
    </div>
    <div class="col-10 offset-1 col-lg-5 offset-lg-0">
      <br>
      <div>
        <h1 class="float-left">Comments</h1>
        <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
            Add a comment
        </button>
      </div>
      <div class="clear"></div>
      <br>
      <div id="comments-box">
        <% @place.comments.each do |comment| %>
          <blockquote>
            <% if comment.humanized_rating.present? %>
              <b><%= comment.humanized_rating %></b>
            <% end %>
            <br>
            <%= comment.message %>
            <br>
            <small><%= comment.user.email %></small>
          </blockquote>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <a id="dropdown-button" class="button default ok btn btn-outline-info btn-sm offset-5" href="#img-dropdown" data-toggle="collapse" aria-expanded="false">
    View Images
  </a>
</div>
<br>
<div id="img-dropdown" class="collapse booyah-box col-10 offset-1">
<% @place.photos.each do |photo| %>
  <%= image_tag photo.picture.url.to_s, class: "img-fluid" %>
  <p><%= photo.caption %></p>
<% end %>
</div>
<div class="clear"></div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add an Image</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
          <%= f.input :caption %>
          <%= f.input :picture %>
          <div class="modal-footer">
          <%= f.submit "Add a Photo", class: 'btn btn-primary' %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>


